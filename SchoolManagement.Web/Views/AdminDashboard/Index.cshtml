@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // the gray layout with sidebar
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <h1 class="mt-4">Admin Dashboard</h1>
    <p>Welcome to the control panel.</p>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Users</h5>
                    <p class="card-text">Manage admins, staff, and students.</p>
                    <a href="/AdminDashboard/Users" class="btn btn-primary">Manage Users</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Courses</h5>
                    <p class="card-text">Add or edit available courses.</p>
                    <a href="/AdminDashboard/Courses" class="btn btn-primary">Manage Courses</a>
                </div>
            </div>
        </div>
    </div>
</div>
