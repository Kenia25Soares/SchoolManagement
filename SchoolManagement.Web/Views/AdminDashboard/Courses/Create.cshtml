@model SchoolManagement.Web.Models.ViewModels.CourseViewModel

@{
    ViewData["Title"] = "Create Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg mx-auto p-4" style="max-width: 900px;">
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Create New Course</h2>

            <form asp-action="Create" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" autocomplete="off" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="AcademicYear" class="form-label"></label>
                        <input asp-for="AcademicYear" class="form-control" autocomplete="off" />
                        <span asp-validation-for="AcademicYear" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Shift" class="form-label"></label>
                        <select asp-for="Shift" class="form-select">
                            <option value="">-- Select Shift --</option>
                            <option value="Daytime">Daytime</option>
                            <option value="Evening">Evening</option>
                        </select>
                        <span asp-validation-for="Shift" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <button type="submit" class="btn btn-success">Create</button>
                    <a asp-action="Index" class="btn btn-secondary">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
