<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - School Management</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <span class="navbar-brand">School Management</span>

            @if (User.Identity?.IsAuthenticated == true)
            {
                var pictureUrl = ViewData["ProfilePictureUrl"] as string;

                <div class="d-flex align-items-center gap-2">
                    @if (!string.IsNullOrEmpty(pictureUrl))
                    {
                        <img src="@pictureUrl" class="rounded-circle" style="width: 35px; height: 35px; object-fit: cover;" />
                    }
                    <span class="text-white">@User.Identity.Name</span>
                    <form method="post" asp-controller="Account" asp-action="Logout">
                        <button type="submit" class="btn btn-sm btn-outline-light">Logout</button>
                    </form>
                </div>
            }
        </div>
    </nav>

    <!-- Sidebar -->
    <div class="sidebar">
        <a asp-controller="Home" asp-action="Index">Dashboard</a>
        <a asp-controller="Students" asp-action="Index">Students</a>
    </div>

    <!-- Page Content -->
    <div class="content-wrapper">
        @RenderBody()
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
