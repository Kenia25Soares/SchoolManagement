<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - School Management</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top">
        <div class="container-fluid">
            <span class="navbar-brand">School Management</span>
        </div>
    </nav>

    <!-- Sidebar -->
    <div class="sidebar">
        <a asp-controller="Home" asp-action="Index">Dashboard</a>
        <a asp-controller="Students" asp-action="Index">Students</a>
        <a asp-controller="Teachers" asp-action="Index">Teachers</a>
        <a asp-controller="Classes" asp-action="Index">Classes</a>
        <a asp-controller="Subjects" asp-action="Index">Subjects</a>
        <a asp-controller="Grades" asp-action="Index">Grades</a>
    </div>

    <!-- Page Content -->
    <div class="content-wrapper">
        @RenderBody()
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
